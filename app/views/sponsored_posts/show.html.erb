<h1><%= @sponsored_post.title %></h1>

 <div class="row">
   <div class="row">
   <div class="col-md-8">
         <p><%= @sponsored_post.body %></p>

   <div class="col-md-4">

     <%= link_to "Edit Sponsored Post", edit_sponsored_post_path, class: 'btn btn-success' %><br /><br />
     <%= link_to "New Sponsored Post", new_sponsored_post_path(@sponsored_post), class: 'btn btn-success' %><br/><br/>
     <%= link_to "Delete Topic", @sponsored_post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this sponsored post?' } %>
   </div>
 </div>
